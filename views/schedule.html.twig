{% extends "/../layout/index.html.twig" %}

{% block title %}Sessions schedule - {% endblock %}

{% block nav %}
    <ul class="nav">
        {% for item in nav %}
            {% if item.title == active %}
                <li class="active"><a href="{{ item.link }}">{{ item.title }}</a></li>
            {% else %}
                <li><a href="{{ item.link }}">{{ item.title }}</a></li>
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}


{% block content %}
<h3>Day 1</h3>
<div class="row-fluid">
    <div class="span12">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Room 135</th>
                    <th scope="col">Room 42</th>
                    <th scope="col">Room 83</th>
                    <th scope="col">Room 62</th>
                </tr>
            </thead>
          <tbody>
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap><b>8:00 am - 9:30 am</b></th>
                    <td data-title="Courtyard" colspan="4" class="tableCellCenter ">Registration & Breakfast</td>
                </tr>
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap><b>9:30 am</b></th>
                    <td data-title="Room 135" colspan="4" class="tableCellCenter">Keynote - <a href="/sessions/learning_how_to_learn">Learning how to learn</a> (<a href="/speakers#Joel_Clermont">Joel Clermont</a>)</td>
                </tr>
                {% set count = 0 %}
                {% set hour = 10 %}
                {% set rooms = {1: '135', 2: '42', 3: '83', 4: '62' }%}
                {% for session in sessions %}
                 {% if count == 0 %}
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap>{{ hour > 12 ? hour - 12 : hour }}:30 {{ hour < 12 ? 'am' : 'pm' }}</th>
                    <td data-title="Room {{ rooms[count + 1] }}"><a href="/sessions/{{ session.title|replace({' ' : '_'}) }}">{{session.title}}</a> (<a href="/speakers#{{ session.fname }}_{{ session.lname }}">{{ session.fname }} {{ session.lname }}</a>) <!-- ({{session.name}}) --></td>
                {% else %}
                    <td data-title="Room {{ rooms[count + 1] }}"><a href="/sessions/{{ session.title|replace({' ' : '_'}) }}">{{session.title}}</a> (<a href="/speakers#{{ session.fname }}_{{ session.lname }}">{{ session.fname }} {{ session.lname }}</a>) <!--({{session.name}})--></td>
                {% endif %}
                {% set count  = count + 1 %}
                {% if count == 4 %}
                    {% set hour = hour + 1 %}
                    {% if hour == 11 %}
                </tr>
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap>{{ hour }}:30 am - {{ hour + 1 }}:30 pm</th>
                    <td data-title="Courtyard" colspan="4" class="tableCellCenter ">Lunch</td>
                    {% set hour = hour + 1 %}
                    {% endif %}
                    {% set count = 0 %}
                </tr>
                {% endif %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<h3>Day 2</h3>
<div class="row-fluid">
    <div class="span12">
        <table class="table table-striped table-condensed">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Room 135</th>
                    <th scope="col">Room 42</th>
                    <th scope="col">Room 83</th>
                    <th scope="col">Room 62</th>
                </tr>
            </thead>
          <tbody>
            <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap><b>8:30 am</b></th>
                    <td data-title="Courtyard" colspan="4" class="tableCellCenter ">Breakfast</td>
                </tr>
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap><b>9:30 am</b></th>
                    <td data-title="Room 135" colspan="4" class="tableCellCenter">Keynote - <a href="/sessions/deploying_php_on_paas:_why_&_how">Deploying PHP on PaaS: Why &amp; How</a> (<a href="/speakers#jerome_petazzoni">Jerome Petazzoni</a>)</td>
                </tr>
                {% set count = 0 %}
                {% set hour = 10 %}
                {% for session in day2 %}
                {% if count == 0 %}
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap>{{ hour > 12 ? hour - 12 : hour }}:30 {{ hour < 12 ? 'am' : 'pm' }}</th>
                    <td data-title="Room {{ rooms[count + 1] }}"><a href="/sessions/{{ session.title|replace({' ' : '_'}) }}">{{session.title}}</a> (<a href="/speakers#{{ session.fname }}_{{ session.lname }}">{{ session.fname }} {{ session.lname }}</a>) <!-- ({{session.name}}) --></td>
                {% else %}
                    <td data-title="Room {{ rooms[count + 1] }}"><a href="/sessions/{{ session.title|replace({' ' : '_'}) }}">{{session.title}}</a> (<a href="/speakers#{{ session.fname }}_{{ session.lname }}">{{ session.fname }} {{ session.lname }}</a>) <!--({{session.name}})--></td>
                {% endif %}
                {% set count  = count + 1 %}
                {% if count == 4 %}
                    {% set hour = hour + 1 %}
                    {% if hour == 11 %}
                </tr>
                <tr class="vcard">
                    <th scope="row" class="n" data-title="Time" nowrap>{{ hour }}:30 am - {{ hour + 1 }}:30 pm</th>
                    <td data-title="Cafeteria" colspan="4" class="tableCellCenter ">Lunch</td>
                    {% set hour = hour + 1 %}
                    {% endif %}
                    {% set count = 0 %}
                </tr>
                {% endif %}
                {% endfor %}
                {% if count < 4 %}
                {% set hour = hour + 1 %}
                {% endif %}
                <tr>
                    <td data-Time="Time" class="n"><b>{{ hour > 12 ? hour - 12 : hour }}:30 {{ hour < 12 ? 'am' : 'pm' }}</b></td>
                    <td data-title="Room 135" colspan="4" class="tableCellCenter ">Closing, Thank yous, and give aways</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<a href="http://cce.umn.edu/documents/cpe-cecc/cecc-floor-plan.pdf" target="_blank">Map</a>(PDF)

{% endblock %}
